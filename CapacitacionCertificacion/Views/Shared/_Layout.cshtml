<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CapacitacionCertificacion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CapacitacionCertificacion.styles.css" asp-append-version="true" />

    <style>
        :root {
            --cian: #00e5ff;
            --verde-claro: #64ffda;
            --azul-oscuro: #2c5364;
            --fondo-claro: linear-gradient(to right, #e0f7fa, #e8f5e9);
            --fondo-oscuro: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            --texto: #ffffff;
        }

        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: var(--fondo-oscuro);
            color: var(--texto);
            transition: background 0.3s ease, color 0.3s ease;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 12px rgba(0, 229, 255, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: var(--cian) !important;
            text-shadow: 0 0 10px var(--cian);
        }

        .nav-link {
            color: #ffffff !important;
            font-weight: 500;
            transition: color 0.3s ease, text-shadow 0.3s ease;
        }

            .nav-link:hover {
                color: var(--verde-claro) !important;
                text-shadow: 0 0 8px var(--verde-claro);
            }

        .container {
            padding-top: 20px;
        }

        footer.footer {
            background-color: rgba(0, 0, 0, 0.3);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: #ffffff;
            padding: 0.05rem;
            text-align: center;
            font-size: 0.75rem;
        }

            footer.footer a {
                color: var(--verde-claro);
                text-decoration: none;
            }

                footer.footer a:hover {
                    text-shadow: 0 0 6px var(--verde-claro);
                }

        /* Preferencias de tema del sistema operativo */
        @@media (prefers-color-scheme: light) {
            body

        {
            background: var(--fondo-claro);
            color: #2e7d32;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: none;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            color: #0277bd !important;
            text-shadow: none;
        }

        .nav-link {
            color: #0277bd !important;
        }

            .nav-link:hover {
                color: #004d40 !important;
                text-shadow: none;
            }

        
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CapacitacionCertificacion</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">¿Quiénes Somos?</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Empleados" asp-action="Index">Empleados</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Programas" asp-action="Index">Programas</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cursos" asp-action="Index">Cursos</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AsignacionesCursoes" asp-action="Index">Asignaciones</a>
                        </li>

                      

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
